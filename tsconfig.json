{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "types": [
            "node","jest"
        ],
        "pretty": true,
        "sourceMap": true,
        "target": "es2021",
        "rootDir": "./src",
        "outDir": "./lib",
        "baseUrl": "./src",
        "removeComments": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}